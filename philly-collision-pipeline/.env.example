# Environment Configuration Template
# Copy this file to .env and fill in your values

# NOAA API Token (get from https://www.ncdc.noaa.gov/cdo-web/token)
NOAA_API_TOKEN=your_token_here

# Data Configuration
START_YEAR=2005
END_YEAR=2024

# Philadelphia Geographic Bounds (for validation)
PHILLY_LAT_MIN=39.867
PHILLY_LAT_MAX=40.138
PHILLY_LON_MIN=-75.280
PHILLY_LON_MAX=-74.956

# NOAA Weather Station ID for Philadelphia International Airport
NOAA_STATION_ID=GHCND:USW00013739

# Logging Level
LOG_LEVEL=INFO

# Output Format (parquet or csv)
OUTPUT_FORMAT=parquet
